{
  "name": "template-typescript",
  "version": "1.0.0",
  "description": "A template repository to describe typescript best practices",
  "files": [
    "src"
  ],
  "main": "index.js",
  "scripts": {
    "build": "tsc && echo 'build success -' `date`",
    "clean": "rm -rf ./node_modules && rm -rf ./dist",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .ts .",
    "start": "tsc && npx node dist/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leandropadua/template-typescript.git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Leandro Padua",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "10.17.5",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.0.2",
    "@types/jest": "^26.0.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npx eslint --fix"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
